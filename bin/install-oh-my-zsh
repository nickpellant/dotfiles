#!/bin/sh
#
# install-oh-my-zsh
#
# `install-oh-my-zsh` installs oh-my-zsh

if [ ! -d "~/.oh-my-zsh" ]; then
  echo "  › Installing oh-my-zsh..."
  sh -c "$(curl -fsSL https://raw.githubusercontent.com/robbyrussell/oh-my-zsh/master/tools/install.sh)"
else
  echo "  › oh-my-zsh already installed, skipping..."
fi

exit 0
