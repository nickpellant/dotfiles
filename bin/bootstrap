#!/bin/bash
#
# bootstrap-macos
#
# `boostrap-macos` bootstraps a mac workspace

BINDIR=$(dirname "$0")

echo "  › Bootstrapping macOS..."

"$BINDIR"/link-dots
"$BINDIR"/install-oh-my-zsh
"$BINDIR"/install-homebrew

read -p "    ? Do you want to configure macOS defaults (y/n)? " -n 1 -r
echo
if [[ $REPLY =~ ^[Yy]$ ]]
then
    "$BINDIR"/configure-macos
else
    echo "    ›› Skipping macOS defaults configuration..."
fi

"$BINDIR"/bundle

echo "  › Bootstrapping complete."
